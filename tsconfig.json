{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["DOM", "ES2021"],
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "types": ["./node_modules/user-agent-data-types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
